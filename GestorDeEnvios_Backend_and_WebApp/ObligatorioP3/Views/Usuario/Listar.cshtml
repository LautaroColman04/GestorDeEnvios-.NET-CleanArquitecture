@model IEnumerable<DTOs.DTOs.DTOsUsuario.DTOUsuario>

@{
    ViewData["Title"] = "Listado de Usuarios";
}

<section class="max-w-7xl mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold text-indigo-700 mb-6 text-center">📋 Usuarios Registrados</h1>

    <!-- Acciones superiores -->
    <div class="flex flex-wrap gap-3 justify-center mb-8">
        <a asp-action="Create"
           class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium shadow transition">
            ➕ Alta Usuario
        </a>
        <a asp-action="Index"
           class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md font-medium shadow transition">
            ← Volver al Inicio
        </a>
    </div>

    <!-- Tabla de usuarios -->
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow text-sm">
            <thead class="bg-gray-100 text-gray-700">
                <tr>
                    <th class="px-4 py-3">Email</th>
                    <th class="px-4 py-3">ID</th>
                    <th class="px-4 py-3">Nombre</th>
                    <th class="px-4 py-3">Apellido</th>
                    <th class="px-4 py-3">Rol</th>
                    <th class="px-4 py-3 text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="border-t hover:bg-gray-50">
                        <td class="px-4 py-3">@item.Email</td>
                        <td class="px-4 py-3">@item.Id</td>
                        <td class="px-4 py-3">@item.Nombre</td>
                        <td class="px-4 py-3">@item.Apellido</td>
                        <td class="px-4 py-3">
                            <span class="
                                px-3 py-1 rounded-full text-xs font-semibold
                                @(
                                    item.Rol.ToUpper() == "EMPLEADO" ? "bg-indigo-100 text-indigo-800" :
                                    item.Rol.ToUpper() == "CLIENTE" ? "bg-green-100 text-green-800" :
                                    "bg-gray-100 text-gray-800"
                                )">
                                @item.Rol
                            </span>
                        </td>
                        <td class="px-4 py-3 text-center space-x-2">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded-md font-medium text-xs transition">
                                Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="bg-indigo-600 hover:bg-indigo-700 text-white px-3 py-1 rounded-md font-medium text-xs transition">
                                Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded-md font-medium text-xs transition">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>