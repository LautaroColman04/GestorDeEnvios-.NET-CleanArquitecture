@model DTOs.DTOs.DTOsUsuario.DTOUsuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<section class="min-h-screen bg-gray-50 px-4 py-16">
    <div class="max-w-lg mx-auto bg-white p-8 rounded-xl shadow-md">
        <h1 class="text-2xl font-bold text-indigo-700 mb-6 text-center">✏️ Editar Usuario</h1>

        @if (!string.IsNullOrEmpty(ViewBag.msg as string))
        {
            <div class="text-green-600 text-center font-medium mb-4">
                @ViewBag.msg
            </div>
        }

        <form asp-action="Edit" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <input type="hidden" asp-for="Id" />

            <!-- Email -->
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input asp-for="Email" class="w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <!-- Nombre -->
            <div>
                <label asp-for="Nombre" class="block text-sm font-medium text-gray-700 mb-1">Nombre</label>
                <input asp-for="Nombre" class="w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="Nombre" class="text-red-500 text-sm"></span>
            </div>

            <!-- Apellido -->
            <div>
                <label asp-for="Apellido" class="block text-sm font-medium text-gray-700 mb-1">Apellido</label>
                <input asp-for="Apellido" class="w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="Apellido" class="text-red-500 text-sm"></span>
            </div>

            <!-- Rol -->
            <div>
                <label asp-for="RolInt" class="block text-sm font-medium text-gray-700 mb-1">Rol</label>
                <select asp-for="RolInt" class="w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-indigo-500">
                    <option value="0" selected="@(Model.Rol == "Administrador")">Administrador</option>
                    <option value="1" selected="@(Model.Rol == "Funcionario")">Funcionario</option>
                    <option value="2" selected="@(Model.Rol == "Cliente")">Cliente</option>
                </select>
                <span asp-validation-for="RolInt" class="text-red-500 text-sm"></span>
            </div>

            <div class="text-center">
                <input type="submit"
                       value="Actualizar"
                       class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2 rounded-md font-medium shadow transition" />
            </div>
        </form>

        <div class="mt-6 text-center">
            <a asp-action="Listar"
               class="inline-block bg-gray-700 hover:bg-gray-800 text-white px-4 py-2 rounded-md font-medium transition">
                ← Volver al Listado
            </a>
        </div>
    </div>
</section>