@model DTOs.DTOs.DTOsUsuario.DTOUsuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<section class="min-h-screen bg-red-50 px-4 py-16">
    <div class="max-w-xl mx-auto bg-white p-8 rounded-xl shadow-md">
        <h1 class="text-2xl font-bold text-red-700 mb-4 text-center">⚠️ Eliminar Usuario</h1>
        <p class="text-gray-700 text-center mb-6 text-sm">
            Esta acción eliminará el usuario de forma permanente. Verificá que los datos sean correctos antes de confirmar.
        </p>

        <div class="space-y-4 text-sm text-gray-800">
            <div>
                <span class="font-semibold text-red-600">📧 Email:</span> @Model.Email
            </div>
            <div>
                <span class="font-semibold text-red-600">🆔 ID:</span> @Model.Id
            </div>
            <div>
                <span class="font-semibold text-red-600">🧑 Nombre:</span> @Model.Nombre
            </div>
            <div>
                <span class="font-semibold text-red-600">🧑 Apellido:</span> @Model.Apellido
            </div>
            <div>
                <span class="font-semibold text-red-600">🛡️ Rol:</span> @Model.Rol
            </div>
        </div>

        <form asp-action="Delete" class="mt-8 flex flex-wrap justify-center gap-4">
            <input type="submit" value="Confirmar Eliminación"
                   class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-md shadow font-medium transition" />
            <a asp-action="Listar"
               class="bg-gray-700 hover:bg-gray-800 text-white px-6 py-2 rounded-md shadow font-medium transition">
                ← Cancelar
            </a>
        </form>
    </div>
</section>