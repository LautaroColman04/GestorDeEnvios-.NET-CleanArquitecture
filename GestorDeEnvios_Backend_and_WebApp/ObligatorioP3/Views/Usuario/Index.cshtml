@{
    ViewBag.Title = "Gestión de Usuarios";
}

<section class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-200 px-4 py-16">
    <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl font-bold text-indigo-700 mb-6">👥 Panel de Gestión</h1>
        <p class="text-gray-700 text-lg mb-10">
            Accedé a las funcionalidades administrativas para visualizar usuarios registrados y gestionar sus envíos asociados.
        </p>

        <!-- Secciones -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Usuarios -->
            <div class="bg-white rounded-xl p-6 shadow-md text-left">
                <h2 class="text-xl font-semibold text-indigo-600 mb-2">📋 Listar Usuarios</h2>
                <p class="text-gray-600 mb-4">
                    Visualizá todos los usuarios registrados, su información principal y sus envíos asociados.
                </p>
                <a href="@Url.Action("Listar", "Usuario")"
                   class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md font-medium transition">
                    Ir a Usuarios
                </a>
            </div>

            <!-- Envíos -->
            <div class="bg-white rounded-xl p-6 shadow-md text-left">
                <h2 class="text-xl font-semibold text-indigo-600 mb-2">🚚 Gestionar Envíos</h2>
                <p class="text-gray-600 mb-4">
                    Accedé al listado general de envíos, filtrá por estado y realizá acciones como seguimiento o finalización.
                </p>
                <a href="@Url.Action("Index", "Envio")"
                   class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md font-medium transition">
                    Ver Envíos
                </a>
            </div>
        </div>
    </div>
</section>