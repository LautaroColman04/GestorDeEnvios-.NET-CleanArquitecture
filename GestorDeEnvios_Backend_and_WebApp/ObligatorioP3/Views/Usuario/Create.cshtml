@model DTOs.DTOs.DTOsUsuario.DTOAltaUsuario

@{
    ViewData["Title"] = "Alta de Usuario";
}

<section class="min-h-screen bg-gray-50 px-4 py-16">
    <div class="max-w-lg mx-auto bg-white p-8 rounded-xl shadow-md">
        <h1 class="text-2xl font-bold text-indigo-700 mb-6 text-center">📝 Alta de Usuario</h1>

        @if (!string.IsNullOrEmpty(ViewBag.msg as string))
        {
            <div class="text-green-600 text-center font-medium mb-4">
                @ViewBag.msg
            </div>
        }

        <form asp-action="Create" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <!-- Nombre -->
            <div>
                <label asp-for="Nombre" class="block text-sm font-medium text-gray-700 mb-1">Nombre</label>
                <input asp-for="Nombre" class="w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="Nombre" class="text-red-500 text-sm"></span>
            </div>

            <!-- Apellido -->
            <div>
                <label asp-for="Apellido" class="block text-sm font-medium text-gray-700 mb-1">Apellido</label>
                <input asp-for="Apellido" class="w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="Apellido" class="text-red-500 text-sm"></span>
            </div>

            <!-- Email -->
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input asp-for="Email" class="w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <!-- Password -->
            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Contraseña</label>
                <input asp-for="Password" type="password" class="w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <!-- Rol -->
            <div>
                <label asp-for="Rol" class="block text-sm font-medium text-gray-700 mb-1">Rol</label>
                <select asp-for="Rol" class="w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-indigo-500">
                    <option value="0">Administrador</option>
                    <option value="1">Funcionario</option>
                    <option value="2">Cliente</option>
                </select>
                <span asp-validation-for="Rol" class="text-red-500 text-sm"></span>
            </div>

            <div class="text-center">
                <input type="submit"
                       value="Crear Usuario"
                       class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2 rounded-md font-medium shadow transition" />
            </div>
        </form>

        <div class="mt-6 text-center">
            <a asp-action="Listar"
               class="inline-block bg-gray-700 hover:bg-gray-800 text-white px-4 py-2 rounded-md transition font-medium">
                ← Volver
            </a>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}