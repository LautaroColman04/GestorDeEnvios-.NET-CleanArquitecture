@{
    ViewData["Title"] = "Inicio";
}
<!-- HERO INSTITUCIONAL -->
<section class="bg-gradient-to-r from-indigo-50 to-blue-100 py-20 px-4 text-center">
    <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-extrabold text-indigo-700 mb-4">
            👋 Bienvenido a ClienteHTTP
        </h1>
        <p class="text-gray-700 text-lg md:text-xl mb-6">
            Gestioná tus envíos, hacé seguimientos, y accedé a una plataforma diseñada para vos.
        </p>
        <a href="@Url.Action("Login", "Usuario")"
           class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-md font-semibold transition shadow inline-block">
            Iniciar Sesión
        </a>
    </div>
</section>

<!-- CARRUSEL DE BENEFICIOS -->
<section class="relative w-full max-w-5xl mx-auto my-16 px-4">
    <div id="carousel" class="overflow-hidden rounded-xl h-auto">
        <div id="slides" class="flex w-full transition-transform duration-700 ease-in-out">
            <!-- Slide 1 -->
            <div class="slide w-full flex-shrink-0 p-8 bg-blue-50 text-center shadow-md rounded-xl">
                <h2 class="text-xl font-semibold text-blue-800">📦 Seguimiento en tiempo real</h2>
                <p class="text-blue-700 mt-2">Conocé el estado de tu envío al instante y sin complicaciones.</p>
            </div>
            <!-- Slide 2 -->
            <div class="slide w-full flex-shrink-0 p-8 bg-gray-100 text-center shadow-md rounded-xl">
                <h2 class="text-xl font-semibold text-gray-800">💻 Plataforma amigable</h2>
                <p class="text-gray-600 mt-2">Diseñada para clientes modernos y experiencias simples.</p>
            </div>
            <!-- Slide 3 -->
            <div class="slide w-full flex-shrink-0 p-8 bg-green-50 text-center shadow-md rounded-xl">
                <h2 class="text-xl font-semibold text-green-800">🛠️ Soporte dedicado</h2>
                <p class="text-green-700 mt-2">Estamos para ayudarte 24/7 ante cualquier duda o inconveniente.</p>
            </div>
        </div>
    </div>

    <!-- PUNTITOS -->
    <div class="flex justify-center mt-6 space-x-3">
        <button id="dot0" class="w-3 h-3 rounded-full transition-colors duration-300 bg-blue-600 hover:bg-blue-500"></button>
        <button id="dot1" class="w-3 h-3 rounded-full transition-colors duration-300 bg-gray-400 hover:bg-blue-500"></button>
        <button id="dot2" class="w-3 h-3 rounded-full transition-colors duration-300 bg-gray-400 hover:bg-blue-500"></button>
    </div>
</section>

<script>
    const slides = document.querySelector('#slides');
    const totalSlides = 3;
    let index = 0;
    const dots = [document.getElementById('dot0'), document.getElementById('dot1'), document.getElementById('dot2')];

    function showSlide(i) {
        index = i;
        slides.style.transform = `translateX(-${100 * i}%)`;
        dots.forEach((dot, idx) => {
            dot.classList.toggle('bg-blue-600', idx === i);
            dot.classList.toggle('bg-gray-400', idx !== i);
        });
    }

    // Avance automático
    setInterval(() => {
        index = (index + 1) % totalSlides;
        showSlide(index);
    }, 5000);

    // Acciones de los puntos
    dots.forEach((dot, i) => {
        dot.addEventListener('click', () => {
            showSlide(i);
        });
    });

    // Inicializar
    showSlide(index);
</script>
