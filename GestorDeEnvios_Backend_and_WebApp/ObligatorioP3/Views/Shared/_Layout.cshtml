@{
    int? lid = Context.Session.GetInt32("LogueadoId");
    string lrol = Context.Session.GetString("LogueadoRol");
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ObligatorioP3</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gray-50 text-gray-800">

    <!-- NAVBAR -->
    <header class="bg-white shadow-sm">
        <nav class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">

            @if (lid == null)

            {
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-indigo-700 font-bold text-lg">
                    CORREO PROGRESO
                </a>
            }

            @if (lid != null)

            {
                <a asp-area="" asp-controller="Usuario" asp-action="Index" class="text-indigo-700 font-bold text-lg">
                    INICIO
                </a>


                <div>

                    <a asp-area="" asp-controller="Usuario" asp-action="Logout"
                       class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md font-medium transition">
                        🔒 Cerrar Sesión
                    </a>

                </div>
            }
        </nav>
    </header>

    <!-- CONTENIDO -->
    <main class="max-w-7xl mx-auto px-4 py-10">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-white border-t mt-16">
        <div class="max-w-7xl mx-auto px-4 py-6 flex justify-between items-center text-sm text-gray-500">
            <span>&copy; 2025 - ObligatorioP3</span>
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="hover:underline">
                Política de Privacidad
            </a>
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>