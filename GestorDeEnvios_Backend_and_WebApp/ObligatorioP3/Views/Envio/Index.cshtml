@model IEnumerable<DTOs.DTOs.DTOsEnvio.DTOEnvio>

@{
    ViewData["Title"] = "Gestión de Envíos";
}

<section class="max-w-7xl mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold text-indigo-700 mb-6 text-center">📦 Panel de Gestión de Envíos</h1>

    <!-- Acciones superiores -->
    <div class="flex flex-wrap gap-3 justify-center mb-8">
        <a asp-action="Create" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium shadow transition">
            ➕ Registrar Envío
        </a>
        <a asp-action="ListarEnProceso" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-md font-medium shadow transition">
            🔄 Ver Pendientes
        </a>
        <a asp-controller="Usuario" asp-action="Index" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md font-medium shadow transition">
            ← Volver al Inicio
        </a>
    </div>

    <!-- Tabla de envíos -->
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow text-sm">
            <thead class="bg-gray-100 text-gray-700">
                <tr>
                    <th class="px-4 py-3">ID</th>
                    <th class="px-4 py-3">Tipo</th>
                    <th class="px-4 py-3">Tracking</th>
                    <th class="px-4 py-3">Empleado</th>
                    <th class="px-4 py-3">Cliente</th>
                    <th class="px-4 py-3">Agencia</th>
                    <th class="px-4 py-3">Dirección</th>
                    <th class="px-4 py-3">Peso</th>
                    <th class="px-4 py-3">Estado</th>
                    <th class="px-4 py-3">Creación</th>
                    <th class="px-4 py-3">Entrega</th>
                    <th class="px-4 py-3 text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="border-t hover:bg-gray-50">
                        <td class="px-4 py-3">@item.Id</td>
                        <td class="px-4 py-3">@item.TipoEnvio</td>
                        <td class="px-4 py-3">@item.NumTracking</td>
                        <td class="px-4 py-3">@item.EmpleadoId</td>
                        <td class="px-4 py-3">@item.ClienteId</td>
                        <td class="px-4 py-3">@item.AgenciaId</td>
                        <td class="px-4 py-3">@item.DireccionPostal</td>
                        <td class="px-4 py-3">@item.Peso</td>
                        <td class="px-4 py-3">
                            <span class="
                                px-3 py-1 rounded-full text-xs font-semibold
                                @(
                                    item.Estado.ToUpper() == "FINALIZADO" ? "bg-green-100 text-green-800" :
                                    item.Estado.ToUpper() == "ENPROCESO" ? "bg-blue-100 text-blue-800" :
                                    item.Estado.ToUpper() == "PENDIENTE" ? "bg-yellow-100 text-yellow-800" :
                                    "bg-gray-100 text-gray-800"
                                )">
                                @item.Estado
                            </span>
                        </td>
                        <td class="px-4 py-3">@item.FechaCreacion?.ToShortDateString()</td>
                        <td class="px-4 py-3">@item.FechaEntrega?.ToShortDateString()</td>
                        <td class="px-4 py-3 text-center space-x-2">
                            @if (item.Estado.ToUpper() == "FINALIZADO")
                            {
                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="bg-indigo-600 hover:bg-indigo-700 text-white px-3 py-1 rounded-md font-medium text-xs transition">
                                    Seguimientos
                                </a>
                            }
                            else if (item.Estado.ToUpper() == "ENPROCESO")
                            {
                                <div class="inline-flex flex-col items-center space-y-2">
                                    <a asp-action="Finalizar" asp-route-id="@item.Id" asp-route-origen="ListarEnProceso"
                                       class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded-md font-medium text-xs transition">
                                        Finalizar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="bg-indigo-600 hover:bg-indigo-700 text-white px-3 py-1 rounded-md font-medium text-xs transition">
                                        Seguimientos
                                    </a>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>