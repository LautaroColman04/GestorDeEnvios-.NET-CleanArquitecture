@model ObligatorioP3.Models.ModelsEnvio.AgregarSeguimientoViewModel

@{
    ViewData["Title"] = "Agregar Seguimiento";
}

<section class="min-h-screen bg-gray-50 px-4 py-16">
    <div class="max-w-xl mx-auto bg-white p-8 rounded-xl shadow-md">
        <h1 class="text-2xl font-bold text-indigo-700 mb-6 text-center">📝 Agregar Seguimiento</h1>

        @if (!string.IsNullOrEmpty(ViewBag.msg as string))
        {
            <div class="bg-green-100 text-green-700 px-4 py-3 rounded-md mb-6 text-sm text-center shadow">
                @ViewBag.msg
            </div>
        }

        <form asp-action="AgregarSeguimiento" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <input type="hidden" asp-for="dtoCreateSeguimientoEnvio.EnvioId" value="@Model.dtoEnvio.Id" />

            <!-- Comentario -->
            <div>
                <label asp-for="dtoCreateSeguimientoEnvio.dtoComentario.Texto"
                       class="block text-sm font-medium text-gray-700 mb-1">
                    Comentario de seguimiento
                </label>
                <textarea asp-for="dtoCreateSeguimientoEnvio.dtoComentario.Texto"
                          rows="5"
                          class="w-full border border-gray-300 rounded-md px-4 py-2 resize-none focus:ring-2 focus:ring-indigo-500"></textarea>
                <span asp-validation-for="dtoCreateSeguimientoEnvio.dtoComentario.Texto" class="text-red-500 text-sm"></span>
            </div>

            <!-- Submit -->
            <div class="text-center">
                <input type="submit" value="Agregar"
                       class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2 rounded-md font-medium shadow transition" />
            </div>
        </form>

        <!-- Acciones -->
        <div class="mt-6 text-center">
            <a asp-action="Index"
               class="inline-block bg-gray-700 hover:bg-gray-800 text-white px-4 py-2 rounded-md transition font-medium">
                ← Volver al Listado
            </a>
        </div>
    </div>
</section>